@model EntityFrameworkExample.Models.Student
<hr/>
<div class="row">
   <div class="col-md-4">
       <form asp-action="Create" method="POST">
           <div class="form-group">
               <label asp-for="Name" class="control-label"></label>
               <input asp-for="Name" class="form-control" />
               <span asp-validation-for="Name" class="text-danger" />
           </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label"></label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger" />
            </div>
            <div class="form-group mt-2 mb-2">
                <input type="submit" value="Öğrenci Oluştur" class="btn btn-primary" />
            </div>
       </form>
   </div>
</div>
<div>
    <a asp-action="Index">Geri</a>
</div>